
@using webBH.Models
@if (Session["UserId"] != null)
{
    using (Html.BeginForm("Index", "Logout", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            
            <li>@Html.ActionLink("Giỏ hàng", "Index", "Cart", routeValues: null, htmlAttributes: new { id = "cartLink" })</li>
            <li>
                @Html.ActionLink("Hello " + Session["UserName"].ToString(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>

    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng ký", "Index", "Register", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Đăng nhập", "Index", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
